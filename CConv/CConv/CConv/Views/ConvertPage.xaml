<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CConv.Views.ConvertPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Source" />
            <Entry x:Name="ConvertSource" Text="{Binding Source, Mode=TwoWay}" />
            <Label Text="Target" />
            <Entry x:Name="ConvertTarget" Text="{Binding Source, Mode=TwoWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>