<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:CConv.Views;assembly=CConv"
             x:Class="CConv.Views.MainPage">
    <TabbedPage.Children>

        <NavigationPage Title="Convert">
            <x:Arguments>
                <views:ConvertPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="About">
            <x:Arguments>
                <views:AboutPage />
            </x:Arguments>
        </NavigationPage>

    </TabbedPage.Children>
</TabbedPage>
